<header class = "navbar navbar-fixed-top navbar-default">
    <div class = "container">
      <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
      <ul class="nav_ul_item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-default dropdown-toggle btn-danger", 'data-toggle' => "dropdown" do %>
            Styles <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <% Style.all.each do |style| %>
              <li><%= link_to style.name, style_path(style) %></li>
            <% end %>
            <% if logged_in? %>
              <li class="divider"></li>
              <li>
                <%= link_to(new_style_path) do %>
                  New Style
                <% end %> 
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
      <ul class="nav_ul_item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-default dropdown-toggle btn-danger", 'data-toggle' => "dropdown" do %>
            Ingrediants <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <% Ingrediant.all.each do |ingrediant| %>
              <li><%= link_to ingrediant.name, ingrediant_path(ingrediant) %></li>
            <% end %>
            <% if logged_in? %>
              <li class="divider"></li>
              <li>
                <%= link_to(new_ingrediant_path) do %>
                  New Ingrediant
                <% end %> 
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
      <% if logged_in? %>
        <div class="nav_item">
          <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
        </div>
        <ul class="nav_item">
          <li class="dropdown">
            <%= link_to '#', class: "btn btn-default dropdown-toggle btn-danger", 'data-toggle' => "dropdown" do %>
              <%= current_user.chefname %> <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", chef_path(current_user) %> </li>
              <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log Out", logout_path %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <div class="nav_item">
          <%= link_to "Log in", login_path, class: "btn btn-default btn-success" %>
        </div>
      <% end %>
    </div>
</header>