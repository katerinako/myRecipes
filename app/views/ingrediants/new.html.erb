<%= render 'shared/page_title', title: "Create a new Ingrediant" %> 
<%= render 'shared/errors', obj: @ingrediant %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
        <%= form_for @ingrediant do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.submit 'Create Ingrediant', class: "btn btn-success" %>
        <% end %>
    </div>
</div>

